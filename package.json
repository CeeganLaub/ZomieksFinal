{
  "name": "zomieks",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "dev:web": "npm run dev --workspace=@zomieks/web",
    "dev:api": "npm run dev --workspace=@zomieks/api",
    "dev:worker": "npm run dev --workspace=apps/api-worker",
    "deploy:worker": "npm run deploy --workspace=apps/api-worker",
    "db:generate": "npm run db:generate --workspace=@zomieks/api",
    "db:push": "npm run db:push --workspace=@zomieks/api",
    "db:migrate": "npm run db:migrate --workspace=@zomieks/api",
    "db:studio": "npm run db:studio --workspace=@zomieks/api",
    "db:generate:d1": "npm run generate --workspace=packages/db",
    "db:migrate:d1": "npm run migrate --workspace=apps/api-worker"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.2.0"
}
